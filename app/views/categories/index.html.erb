<% content_for :title, "Categories" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3">Categories</h1>
  <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th>Book Count</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category_path(category) %></td>
      <td><%= category.code %></td>
      <td><%= truncate(category.description.to_s, length: 80) %></td>
      <td><%= category.respond_to?(:books_count) ? category.books_count : category.books.count %></td>
      <td>
        <%= link_to "Show", category_path(category), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-warning ms-1" %>
        <%= link_to "Delete", category_path(category), method: :delete,
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger ms-1" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
