<%= form_with(model: category, local: true) do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <p><strong><%= pluralize(category.errors.count, "error") %> prevented this category from being saved:</strong></p>
      <ul>
        <% category.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :code, "Code (3 uppercase letters)", class: "form-label" %>
    <%= f.text_field :code, class: "form-control", maxlength: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
