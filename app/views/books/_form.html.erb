<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h5>
      <ul class="mb-0">
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :isbn, class: "form-label" %>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :published_date, class: "form-label" %>
      <%= f.date_field :published_date, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :page_count, class: "form-label" %>
      <%= f.number_field :page_count, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :author_id, "Author", class: "form-label" %>
      <%= f.collection_select :author_id, Author.order(:name), :id, :name, { prompt: "Select Author" }, class: "form-select" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, "Category", class: "form-label" %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, { prompt: "Select Category" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :tag_names, "Tags (comma-separated)", class: "form-label" %>
    <% tags_value = book.tag_names.presence || book.tags.map(&:name).join(", ") %>
    <%= f.text_field :tag_names, value: tags_value, class: "form-control", placeholder: "e.g. mystery, thriller, 20th-century" %>
    <div class="form-text">Tags will be created if they donâ€™t exist.</div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", books_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
