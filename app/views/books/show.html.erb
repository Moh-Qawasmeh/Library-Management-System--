<% content_for :title, @book.title %>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title mb-3"><%= @book.title %></h1>

      <table class="table table-borderless mt-3">
        <tr>
          <th style="width: 160px;">ISBN:</th>
          <td><%= @book.isbn %></td>
        </tr>
        <tr>
          <th>Description:</th>
          <td><%= simple_format(@book.description) %></td>
        </tr>
        <tr>
          <th>Published Date:</th>
          <td><%= @book.published_date %></td>
        </tr>
        <tr>
          <th>Page Count:</th>
          <td><%= @book.page_count %></td>
        </tr>
        <tr>
          <th>Author:</th>
          <td>
            <% if @book.author %>
              <%= link_to @book.author.name, author_path(@book.author), class: "text-decoration-none" %>
            <% else %>
              <span class="text-muted">—</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>Category:</th>
          <td>
            <% if @book.category %>
              <% if user_signed_in? && current_user.admin? %>
                <%= link_to @book.category.name, category_path(@book.category), class: "text-decoration-none" %>
              <% else %>
                <%= @book.category.name %>
              <% end %>
            <% else %>
              <span class="text-muted">—</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>Tags:</th>
          <td>
            <% if @book.tags.any? %>
              <% @book.tags.each do |tag| %>
                <span class="badge bg-primary me-1"><%= tag.name %></span>
              <% end %>
            <% else %>
              <span class="text-muted">No tags assigned</span>
            <% end %>
          </td>
        </tr>
      </table>

      <div class="mt-4">
        <% if user_signed_in? && (current_user.writer? || current_user.admin?) %>
          <%= link_to "Edit Book", edit_book_path(@book), class: "btn btn-warning me-2" %>
        <% end %>

        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Delete Book", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger me-2" %>
        <% end %>

        <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <h3><%= pluralize(@book.comments.count, "Comment") %></h3>

    <div class="mt-3" id="comments">
      <%= render @book.comments %>
    </div>

    <% if user_signed_in? %>
      <div class="card mt-4 shadow-sm">
        <div class="card-body">
          <h4>Add a Comment</h4>
          <%= render "comments/form", commentable: @book, comment: Comment.new %>
        </div>
      </div>
    <% else %>
      <div class="mt-3">
        <%= link_to "Sign in to comment", new_user_session_path, class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
