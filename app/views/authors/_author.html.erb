<div id="<%= dom_id author %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= author.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Bio:</strong>
    <%= author.bio %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Birth date:</strong>
    <%= author.birth_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= author.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Phone number:</strong>
    <%= author.phone_number %>
  </div>
</div>
