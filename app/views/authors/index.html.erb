
<h1 class="mb-4">Authors</h1>

<% if current_user&.admin? %>
  <%= link_to "New Author", new_author_path, class: "btn btn-primary mb-3" %>
<% end %>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Book Count</th>
        <th style="width: 180px;">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td>
            <%= link_to author.name, author_path(author), class: "fw-semibold text-decoration-none" %>
          </td>
          <td><%= author.email %></td>
          <td><%= author.phone_number %></td>
          <td><%= author.books.count %></td>

          <td>
            <div class="btn-group" role="group">

              <% if current_user&.admin? %>
                <%= link_to "Edit", edit_author_path(author), class: "btn btn-sm btn-outline-warning" %>

                <%= link_to "Delete", author_path(author), method: :delete,
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-sm btn-danger ms-1" %>

            <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<div class="mt-3 d-flex justify-content-center">
  <%= will_paginate @authors %>
</div>
