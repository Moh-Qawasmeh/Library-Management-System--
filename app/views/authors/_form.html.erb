<div class="row justify-content-center">
  <div class="col-md-8">

    <div class="card shadow-sm">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><%= author.new_record? ? "New Author" : "Edit Author" %></h5>
      </div>

      <div class="card-body">

        <% if author.errors.any? %>
          <div class="alert alert-danger">
            <h6 class="fw-bold">Please fix the following errors:</h6>
            <ul class="mb-0">
              <% author.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: author, class: "mt-3") do |f| %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :bio, class: "form-label fw-semibold" %>
            <%= f.text_area :bio, class: "form-control", rows: 4 %>
          </div>

          <div class="mb-3">
            <%= f.label :birth_date, class: "form-label fw-semibold" %>
            <%= f.date_field :birth_date, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label fw-semibold" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :phone_number, class: "form-label fw-semibold" %>
            <%= f.text_field :phone_number, class: "form-control", required: true %>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "Back", authors_path, class: "btn btn-secondary" %>
            <%= f.submit (author.new_record? ? "Create Author" : "Update Author"),
                         class: "btn btn-primary" %>
          </div>

        <% end %>

      </div>
    </div>

  </div>
</div>
